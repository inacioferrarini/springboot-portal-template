<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="appLogFile" value="logs/app.log"/>
    <property name="httpLogFile" value="logs/http.log"/>
    <appender name="appFileRolling" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${appLogFile}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %c{1.} [%t] %m%n</pattern>
        </encoder>
    </appender>
    <appender name="httpFileRolling" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${httpLogFile}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/http.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %c{1.} [%t] %m%n</pattern>
        </encoder>
    </appender>
    <logger name="com.inacioferrarini.template.portal.sample" level="debug" additivity="false">
        <appender-ref ref="appFileRolling"/>
    </logger>
    <logger name="org.springframework.web.filter.CommonsRequestLoggingFilter" level="debug" additivity="false">
        <appender-ref ref="httpFileRolling"/>
    </logger>

    <logger name="org.apache.http" level="debug" additivity="false">
        <appender-ref ref="httpFileRolling"/>
    </logger>
    <logger name="org.apache.http.wire" level="debug" additivity="false">
        <appender-ref ref="httpFileRolling"/>
    </logger>
    <root level="error">
        <appender-ref ref="appFileRolling"/>
    </root>
</configuration>